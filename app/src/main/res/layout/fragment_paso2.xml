<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.com.kerbrum.kerbrum.fragment_paso2"
    android:background="@color/blanco">
    <!--TODO: agregar el scroll view xq no pude :) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <!--TODO agregar titulo de la medicina-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="DÃ­as de ingesta"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:weightSum="49">
            <!-- TODO hacer un estilo para los toggle butto -->
            <ToggleButton
                android:id="@+id/lunes"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:textColor="@color/blanco"
                android:layout_height="wrap_content"
                android:background="@drawable/botonesdias"
                android:textOn="Lu"
                android:textOff="Lu"/>
            <ToggleButton
                android:id="@+id/martes"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:textColor="@color/blanco"
                android:layout_height="wrap_content"
                android:background="@drawable/botonesdias"
                android:textOn="Ma"
                android:textOff="Ma"/>
            <ToggleButton
                android:id="@+id/miercoles"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:background="@drawable/botonesdias"
                android:textOn="Mie"
                android:textOff="Mie"/>
            <ToggleButton
                android:id="@+id/jueves"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:background="@drawable/botonesdias"
                android:textOn="Jue"
                android:textOff="Jue"/>
            <ToggleButton
                android:id="@+id/viernes"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:background="@drawable/botonesdias"
                android:textOn="Vie"
                android:textOff="Vie"/>
            <ToggleButton
                android:id="@+id/sabado"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:background="@drawable/botonesdias"
                android:textOn="Sa"
                android:textOff="Sa"/>
            <ToggleButton
                android:id="@+id/domingo"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:background="@drawable/botonesdias"
                android:textOn="Do"
                android:textOff="Do"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="1"
                    android:inputType="number"/>
                <Spinner
                    android:id="@+id/spin_duracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <Button
                android:id="@+id/btn_setFechaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Inicio de ingesta"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                style="@style/botones"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        style="@style/textodetvalertdialog.Titulo"
                        android:text="Stock"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="6.66"
                            android:layout_height="wrap_content"
                            android:text="Cant de comprimidos en la caja"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            style="@style/textodetvalertdialog" />

                        <EditText
                            android:id="@+id/etRemaining"
                            android:layout_width="0dp"
                            android:layout_weight="3.33"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:inputType="number"
                            android:maxLength="5" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="6.66"
                            android:layout_height="wrap_content"
                            android:text="Cant de pastillas ya consumidas"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            style="@style/textodetvalertdialog" />

                        <EditText
                            android:id="@+id/etPastillasConsumidas"
                            android:layout_width="0dp"
                            android:layout_weight="3.33"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:inputType="number"
                            android:maxLength="2" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="6.66"
                            android:layout_height="wrap_content"
                            android:text="Cant de cajas que tiene actualmente"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            style="@style/textodetvalertdialog" />

                        <EditText
                            android:id="@+id/etCajas"
                            android:layout_width="0dp"
                            android:layout_weight="3.33"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:inputType="number"
                            android:maxLength="2" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

    </LinearLayout>

</FrameLayout>
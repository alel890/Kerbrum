<resources>

    <style name="botones">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#EAF2D7</item>
    </style>
    <style name="editText_ab">
        <item name="android:minWidth">160dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textColorHint">@color/blanco</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="textoindicadoraccion">
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="textoindicadoraccion.titulo">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="textoindicadoraccion.descripcion">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="editTextStock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>

    </style>
    <style name="textViewStock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:maxWidth">210dp</item>
    </style>

    <style name="textodetvalertdialog">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textodetvalertdialog.Titulo">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="radioButtonPastilla">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Base.Theme.AppCompat.Light.DarkActionBar">
       <item name="colorPrimary">@color/primaryColor</item>
       <item name="colorPrimaryDark">@color/primaryColorDark</item>
       <item name="colorAccent">@color/floating_action_button_color</item>
    </style>

</resources>
